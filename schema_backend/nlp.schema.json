{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema_backend/nlp.schema.json",
  "title": "nlp",
  "description": "NLP schema for raw corpus storage",
  "definitions": {
    "data": {
      "type": "object",
      "properties": {
        "num_pages": {
          "type": "number"
        },
        "figures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "image": {
                "type": "string",
                "contentEncoding": "base64",
                "contentMediaType": "image/png"
              },
              "caption": {
                "type": "string"
              }
            }
          }
        },
        "tables": {
          "type": "object",
          "properties": {
            "header": {
              "type": "array",
              "items": {
                "type": "string"
              },
                "values": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "number"
                      }
                    ]
                }
              }
            }
          }
        },
        "text": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "author": {
      "type": "object",
      "properties": {
        "auid": {
          "type": "string"
        },
        "indexed_name": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        },
        "given_name": {
          "type": "string"
        },
        "affiliation": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },

  "type": "object",
  "properties": {
    "_id": {
      "description": "A unique identifier for the article",
      "type": "string"
    },
    "doi": {
      "description": "Article's digital object identifier (DOI)",
      "type": "string"
    },
    "date_accessed": {
      "description": "DOI",
      "type": "string"
    },
    "abstract": {
      "description": "Article abstract",
      "type": "string"
    },
    "authors": {
      "description": "List of author names",
      "type": "array",
      "items": {
        "$ref": "#/definitions/author"
      }
    },
    "publish_date": {
      "description": "Date the article was published",
      "type":"string"
    },
    "publisher":  {
      "description": "Name of the article's publisher",
      "type":"string"
    },
    "downloaded_ip":  {
      "description": "IP address that downloaded the article",
      "type":"string"
    },
    "journal":  {
      "description": "Name of the journal that published the article",
      "type":"string"
    },
    "title": {
      "description": "Article title",
      "type":"string"
    },
    "main_text": {
      "description": "Main text for the article",
      "$ref": "#/definitions/data"
    },
    "SI": {
      "description": "Supplementary information",
      "$ref": "#/definitions/data"
    },
    "relevant": {
      "description": "Whether or not the article is relevant to D3TaLES",
      "type": "boolean"
    },
    "last_updated":  {
      "description": "Date this NLP data was last updated",
      "type":"string",
      "format": "date-time"
    }

  },
  "required": ["_id"],
  "additionalProperties": false
}
