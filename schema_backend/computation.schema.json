{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.schema.json",
  "title": "computation",
  "description": "The structure information derived from computation for a molecule entry in database",
  "type": "object",
  "definitions": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3
    },
    "scalar": {
      "type": "number"
    },
    "data": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {
              "$ref": "#/definitions/scalar"
            },
            {
              "$ref": "#/definitions/vector"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        },
        "additionalProperties": false
      }
    }
  },
  "properties": {
    "_id": {
      "description": "A unique identifier for the molecule",
      "type": "string"
    },
    "hash_id": {
      "description": "A unique identifier for the molecule hashed from identifying properties",
      "type": "string"
    },
    "source": {
      "description": "",
      "type": "string"
    },
    "authro": {
      "description": "",
      "type": "string"
    },
    "upload_time": {
      "description": "time and date the data was received",
      "type": "string",
      "format": "date-time"
    },

    "calc_parameters": {
      "description": "Parameters used for calculations",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.conditions.schema.json"
    },
    "charge": {
      "description": "Electronic charge on the molecule",
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "spin_multiplicity": {
      "description": "Spin multiplicity of the molecule",
      "type": "integer"
    },
    "is_groundState": {
      "description": "Whether this charge is the ground state charge",
      "type": "boolean"
    },
    "smiles": {
      "description": "SMILES representation of a molecule",
      "type": "string"
    },
    "selfies": {
      "description": "SELFIES representation of a molecule",
      "type": "string"
    },
    "inchi": {
      "type": "string",
      "description": "InChi string representation of the molecule"
    },
    "inchi_key": {
      "type": "string",
      "description": "Hashed InChi string of the molecule"
    },
    "iupac_name": {
      "type": "string",
      "description": "IUPAC name of the molecule"
    },
    "synonyms": {
      "type": "array",
      "description": "Synonymous names of the molecule",
      "items": {
        "type": "string",
        "description": "One synonym for the molecule."
      }
    },
    "number_of_atoms": {
      "type": "integer",
      "description": "Number of atoms in the molecule."
    },
    "number_of_electrons": {
      "type": "integer",
      "description": "number of electrons in the molecule"
    },
    "molecular_weight": {
      "type": "number",
      "description": "Molecular weight of the molecule in g/mol."
    },
    "calculation_type": {
      "type": "string",
      "description": "Type of calculation file (opt-freq, energy, or tddft)."
    },
    "geometry": {
      "description": "description of a molecule geometry",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.sites.schema.json"
    },
    "scf_dipole_moment": {
      "description": "The X, Y, and Z dipole components of electric dipole moment. Units: Debye",
      "$ref": "#/definitions/data"
    },
    "scf_total_energy": {
      "$ref": "#/definitions/data",
      "description": "Highest occupied molecular orbital. Units: eV"
    },
    "homo": {
      "$ref": "#/definitions/data",
      "description": "Highest occupied molecular orbital. Units: eV"
    },
    "lumo": {
      "$ref": "#/definitions/data",
      "description": "Lowest unoccupied molecular orbital. Units: eV"
    },
    "s0_s1": {
      "$ref": "#/definitions/data",
      "description": "First singlet excitation. Units: eV"
    },
    "frequency_dict": {
      "description": "A list for each freq calculation and for each mode of a dict with {“frequency”: freq in cm-1, “symmetry”: symmetry tag “r_mass”: Reduce mass, “f_constant”: force constant, “IR_intensity”: IR Intensity, “mode”: normal mode}. The normal mode is a 1D vector of dx, dy dz of each atom.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "frequency": {
            "type": "number"
          },
          "symmetry": {
            "type": "string"
          },
          "r_mass": {
            "type": "number"
          },
          "f_constant": {
            "type": "number"
          },
          "IR_intensity": {
            "type": "number"
          },
          "mode": {
            "$ref": "#/definitions/vector"
          }
        }
      }
    },
    "ir_intensities": {
      "description": "",
      "$ref": ""
    },
    "excitation_energies": {
      "description": "TD-DFT excited states such as single, triplet, adiabatic, etc. Returns a list of tuple for each transition such as [(energy (eV), lambda (nm), oscillatory strength), … ]",
      "type": "array"
    }
  },
  "additionalProperties": false
}