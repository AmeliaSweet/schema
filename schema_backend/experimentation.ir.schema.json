{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_backend/experimentation.cv.schema.json",
  "title": "experimentation_cv",
  "description": "characterization of organic materials",
  "type": "object",
  "definitions": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3
    },
    "scalar": {
      "type": "number"
    },
    "data": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {
              "$ref": "#/definitions/scalar"
            },
            {
              "$ref": "#/definitions/vector"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        }
      }
    }
  },


  "properties": {
    "file_name": {
      "description": "Name of file uploaded",
      "type": "string"
    },
    "header": {
      "description": "CV file header",
      "type": "string"
    },
    "note": {
      "description": "CV file description",
      "type": "string"
    },
    "data_recorded": {
      "description": "Date and time CV data was collected",
      "type": "string",
      "format": "date-time"
    },

    "conditions": {
      "description": "CV conditions",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/conditions/ir.schema.json"
    },

    "wavelength_range": {
      "description": "range of wavelength in nm",
      "$ref": "#/definitions/data"
    },
    "window": {
      "description": "Window used in IR",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/parameters/materials/window.schema.json"
    },
    "scan_data": {
      "description": "",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "potential": {
            "type": "number"
          },
          "current": {
            "type": "number"
          }
        }
      }
    },
    "forward": {
      "description": "",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "reverse": {
      "description": "",
      "type": "array",
      "items": {
        "type": "number"
      }
    }
  },
  "additionalProperties": false
}