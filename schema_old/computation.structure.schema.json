{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/computation.structure.schema.json",
  "title": "structure",
  "description": "3D structure of a molecule",
  "type": "object",
  "calculations": {
    "is_optimized": {
      "description": "whether the 3D geometry is optimized with DFT",
      "type": "boolean"
    },

    "charge": {
      "description": "electronic charge on the molecule",
      "type": "integer"
    },
    "spin_multiplicity": {
      "description": "spin multiplicity of the molecule",
      "type": "integer"
    },
    "dft_parameters": {
          "description": "Parameters used for DFT calculations",
          "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/dft.schema.json"
    },
    "sites": {
      "description": "3D coordinates information of atoms in the a molecule",
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/structure.sites.schema.json"
      }
    },
    "electronic_descriptors": {
      "description": "electronic descriptors for the geometry",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/structure.electronic_descriptors.schema.json"
    },
    "geometry_descriptors": {
      "description": "geometric descriptors for the geometry",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/structure.geometric_descriptors.schema.json"
    },

    "chemical_descriptors": {
      "description": "chemical descriptors for the geometry",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/structure.chemical_descriptors.schema.json"
    }
  },
  "additionalProperties": false
}