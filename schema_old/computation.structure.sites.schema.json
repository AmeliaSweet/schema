  "type": "object",
  "calculations": {
    "sites": {
      "description": "electronic charge on the molecule",
      "type": "object",
      "items": [
        {
          "type": "object",
          "calculations": {
            "name": {
              "type": "string"
            },
            "species": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "calculations": {
                    "element": {
                      "type": "string"
                    },
                    "occu": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "element",
                    "occu"
                  ]
                }
              ]
            },
            "xyz": {
              "type": "array",
              "items": [
                {
                  "type": "number"
                },
                {
                  "type": "number"
                },
                {
                  "type": "number"
                }
              ]
            },
            "calculations": {
              "type": "object"
            }
          },
          "required": [
            "name",
            "species",
            "xyz",
            "properties"
          ]
        }
      ]
    }
  },
  "additionalProperties": false
}



