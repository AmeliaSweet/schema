{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/conditions/ir.schema.json",
  "title": "ir_conditions",
  "description": "The structure information derived from computation for a molecule entry in database",
  "type": "object",
  "definitions": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3
    },
    "scalar": {
      "type": "number"
    },
    "data": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {
              "$ref": "#/definitions/scalar"
            },
            {
              "$ref": "#/definitions/vector"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        }
      }
    }
  },

  "properties": {
    "data_source": {
      "description": "Type of source from which this data came",
      "type": "string",
      "default": "ir"
    },
    "solvent": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "electrolyte": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ionic_liquid": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "instrument": {
      "description": "instrument",
      "type": "string"
    },
    "cuvette": {
      "description": "Cuvette used in UV Vis",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/materials/cuvette.schema.json"
    },
    "phase": {
      "description": "Phase of matter",
      "type": "string"
    },
    "num_scans": {
      "description": "Number of uv/vis scans",
      "type": "number"
    }
  },
  "additionalProperties": false
}
