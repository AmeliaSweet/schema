{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/conditions/cv.schema.json",
  "title": "cv_conditions",
  "description": "The structure information derived from computation for a molecule entry in database",
  "type": "object",
  "definitions": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3
    },
    "scalar": {
      "type": "number"
    },
    "data": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {
              "$ref": "#/definitions/scalar"
            },
            {
              "$ref": "#/definitions/vector"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        }
      }
    }
  },


  "properties": {
    "data_source": {
      "description": "Type of source from which this data came",
      "type": "string",
      "default": "cv"
    },
    "working_electrode": {
      "description": "Working electrode used",
      "type": "string"
    },
    "counter_electrode": {
      "description": "Counter electrode used",
      "type": "string"
    },
    "reference_electrode": {
      "description": "Reference electrode used",
      "type": "string"
    },
    "solvent": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "electrolyte": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ionic_liquid": {
      "description": "Solvent used in experiment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "instrument": {
      "description": "instrument",
      "type": "string"
    },
    "scan_rate": {
      "description": "Rate of change in potential (V) per second",
      "$ref": "#/definitions/data"
    },
    "num_scans": {
      "description": "Number of CV scans",
      "type": "number"
    },
    "initial_potential": {
      "description": "Initial potential in volts",
      "$ref": "#/definitions/data"
    },
    "high_e": {
      "description": "Highest potential in volts",
      "$ref": "#/definitions/data"
    },
    "low_e": {
      "description": "Lowest potential in volts",
      "$ref": "#/definitions/data"
    },
    "experiment_run_id": {
      "description": "ExpFlow experiment run uuid",
      "$ref": "string"
    }
  },
  "additionalProperties": false
}
