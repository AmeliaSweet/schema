{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/characterization.conditions.cv.schema.json",
  "title": "cv",
  "description": "The structure information derived from computation for a molecule entry in database",
  "type": "object",
  "definitions": {
    "compound": {
      "description": "Object containing compound name and concentration",
      "type": "object",
      "properties": {
        "common_name": {
          "type": "string"
        },
        "iupac_name": {
          "type": "string",
          "description": "IUPAC name of the molecule"
        },
        "concentration": {
          "description": "Concentration in millimolar (mm)",
          "type": "number"
        }
      }
    },
    "solvent": {
      "description": "Solvent object containing solvent and all solvent additions",
      "type": "object",
      "properties": {
        "solvent": {
          "$ref": "#/definitions/compound"
        },
        "solvent_additions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/compound"
          }
        }
      }
    }
  },
  "properties": {
    "_id": {
      "description": "A unique identifier for the molecule",
      "type": "string"
    },
    "hash_id": {
      "description": "A unique identifier for the molecule hashed from identifying properties",
      "type": "string"
    },
    "data_source": {
      "description": "Source of the data (experiment, ML, etc.)",
      "type": "string"
    },

    "file_name": {
      "description": "Name of file uploaded",
      "type": "string"
    },
    "header": {
      "description": "CV file header",
      "type": "string"
    },
    "note": {
      "description": "CV file description",
      "type": "string"
    },
    "data_recorded": {
      "description": "Date and time CV data was collected",
      "type": "string",
      "format": "date-time"
    },

    "working_electrode": {
      "description": "Working electrode used",
      "type": "string"
    },
    "counter_electrode": {
      "description": "Counter electrode used",
      "type": "string"
    },
    "reference_electrode": {
      "description": "Reference electrode used",
      "type": "string"
    },
    "solvent": {
      "description": "Solvent used in experiment",
      "$ref": "#/definitions/solvent"
    },

    "instrument_model": {
          "description": "Instrument Model",
          "type": "string"
        },
    "scan_rate": {
      "description": "Rate of change in potential (V) per second",
      "type": "number"
    },
    "num_scans": {
      "description": "Number of CV scans",
      "type": "number"
    },
    "data_points_per_scan": {
      "description": "Number of data points per scan",
      "type": "number"
    },
    "initial_eng": {
      "description": "Initial energy in volts",
      "type": "number"
    },
    "high_eng": {
      "description": "Highest energy in volts",
      "type": "number"
    },
    "low_eng": {
      "description": "Lowest energy in volts",
      "type": "number"
    },
    "initial_p_n": {
      "description": "?????",
      "type": "string"
    },
    "segment": {
      "description": "????",
      "type": "integer"
    },
    "sample_interval": {
      "description": "Sample potential interval (V)",
      "type": "number"
    },
    "quiet_time": {
      "description": "Quiet time in seconds",
      "type": "number"
    },
    "sensitivity": {
      "description": "Sensitivity in A/V",
      "type": "number"
    },
    "cv_data": {
      "description": "",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "potential": {
            "type": "number"
          },
          "current": {
            "type": "number"
          }
        }
      }
    },
    "forward": {
      "description": "",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "reverse": {
      "description": "",
      "type": "array",
      "items": {
        "type": "number"
      }
    }
  }
}
