{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/species_characterization.descriptor.schema.json",
  "title": "species_characterization",
  "description": "Descriptors derived for a molecule entry in database",
  "definitions": {
    "descriptor": {
      "type": "object",
      "properties": {
        "source_hash_ids": {
          "description": "The hash_id values for all data that were used to calculate this property",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conditions": {
          "description": "Parameters used for calculations",
          "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/characterization.conditions.schema.json"
        },
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 1
            },
            {
              "type": "number"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        }
      }
    },
    "descriptor_excitations": {
      "type": "object",
      "properties": {
        "source_hash_ids": {
          "description": "The hash_id values for all data that were used to calculate this property",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conditions": {
          "description": "Parameters used for calculations",
          "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/characterization.conditions.schema.json"
        },
        "excitations": {
          "description": "The value of the descriptor",
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "minItems": 1
        }
      }
    }
  },

  "type": "object",
  "properties": {
    "charge": {
      "description": "Electronic charge on the molecule",
      "type": "number"
    },
    "spin_multiplicity": {
      "description": "spin multiplicity of the molecule",
      "type": "integer"
    },
    "is_groundState": {
      "description": "whether this charge is the ground state charge",
      "type": "boolean"
    },
    "geometry": {
      "description": "description of a molecule geometry",
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/species_characterization.geometry.schema.json"
      }
    },
    "homo_lumo_gap": {
      "description": "Difference between HOMO and LUMO.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/descriptor"
      }
    },
    "scf_dipole_moment": {
      "description": "The X, Y, and Z dipole components of electric dipole moment. Units: Debye",
      "type": "array",
      "items": {
        "$ref": "#/definitions/descriptor"
      }
    },
    "solubility": {
      "description": "Difference between HOMO and LUMO.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/descriptor"
      }
    },
    "excited_states": {
      "description": "Molecular excited states such as single, triplet, etc.",
      "type": "object",
      "properties": {
        "Singlet": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/descriptor_excitations"
          }
        },
        "Triplet": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/descriptor_excitations"
          }
        }
      }
    },
    "spectra": {
      "description": "Two lists for each freq calculation. The first with the frequency cm-1, the second with IR intensity.",
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema_frontend/species_characterization.plotting_data.schema.json"
      }
    }
  },
  "additionalProperties": false
}