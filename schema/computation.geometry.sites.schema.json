{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.sites.schema.json",
  "title": "sites",
  "description": "Pymatgen geometry xyz sites",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "species": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "element": {
                  "type": "string"
                },
                "occu": {
                  "type": "integer"
                }
              },
              "required": [
                "element",
                "occu"
              ]
            }
          ]
        },
        "xyz": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "properties": {
          "type": "object"
        }
      },
      "required": [
        "name",
        "species",
        "xyz",
        "properties"
      ]
    }
  ]
}



