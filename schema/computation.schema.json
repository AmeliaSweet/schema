{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "computation.schema.json",
  "title": "computation",
  "description": "The structure information for a molecule entry in database",


  "definitions": {
    "data": {
      "type": "object",
      "properties": {
        "dft_parameters": {
          "description": "Parameters used for DFT calculations",
          "$ref": "dft.schema.json"
        },
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {"type": "number"},
            {"type": "array",
            "items": {
              "type": "number"
            }},
            {
              "type": "string"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        },
        "order": {
          "description": "Additional field for sorting data",
          "oneOf": [
            {"type": "number"},
            {
              "type": "string"
            },
            {
              "type": "boolean"
            }
            ]
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "_id": {
      "description": "A unique identifier for the molecule",
      "type": "string"
    },

    "smiles": {
      "description": "SMILES representation of a molecule",
      "type": "string"
    },

    "selfies": {
      "description": "SELFIES representation of a molecule",
      "type": "string"
    },

    "inchi": {
        "type": "string",
        "description": "InChi string representation of the molecule"
    },

    "inchi_key": {
        "type": "string",
        "description": "Hashed InChi string of the molecule"
    },

    "geometry": {
      "description": "description of a molecule geometry",
      "type": "array",
      "items": {"$ref": "structure.schema.json"}
    },

    "iupac_name": {
      "type": "string",
      "description": "IUPAC name of the molecule"
    },

    "synonyms": {
      "type": "array",
      "description": "Synonymous names of the molecule",
      "items": {
        "type": "string",
        "description": "One synonym for the molecule."
      }
    },

    "number_of_atoms": {
      "type": "integer",
      "description": "Number of atoms in the molecule."
    },

    "molecular_weight": {
      "type": "number",
      "description": "Molecular weight of the molecule in g/mol."
    },

    "reorganization_energy": {
      "description": "Reorganization energy of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    },

    "vertical_ionization_energy": {
      "description": "Vertical ionization energy of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    },
    "vertical_electron_affinity": {
      "description": "Vertical electron affinity energy of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    },

    "adiabatic_ionization_energy": {
      "description": "Adiabatic ionization energy of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    },
    "adiabatic_electron_affinity": {
      "description": "Adiabatic electron affinity energy of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    },
    "redox_potential": {
      "description": "Reduction potential of the molecule.",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/data"
          }
        }
      }
    }
  },
  "additionalProperties": false

}