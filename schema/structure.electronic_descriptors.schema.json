{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/structure.electronic_descriptors.schema.json",
  "title": "electronic_descriptors",
  "description": "Electronic descriptors for the optimized molecular geometry",

  "type": "object",

    "definitions": {
    "data": {
      "type": "object",
      "properties": {
        "dft_parameters": {
          "description": "Parameters used for DFT calculations",
          "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/dft.schema.json"
        },
        "value": {
          "description": "The value of the descriptor",
          "oneOf": [
            {"type": "number"},
            {"type": "array",
            "items": {
              "type": "number"
            }},
            {
              "type": "string"
            }
          ]
        },
        "unit": {
          "description": "The units for the value",
          "type": "string"
        },
        "order": {
          "description": "Additional field for sorting data",
          "oneOf": [
            {"type": "number"},
            {
              "type": "string"
            },
            {
              "type": "boolean"
            }
            ]
        }
      },
      "additionalProperties": false
    }
  },

  "properties": {
    "scf_dipole_moment": {
      "description": "The X, Y, and Z dipole components of electric dipole moment. Units: Debye",
      "$ref": "#/definitions/data"
    },
    "scf_total_energy": {
      "$ref": "#/definitions/data",
      "description": "Highest occupied molecular orbital. Units: eV"
    },
    "homo": {
      "$ref": "#/definitions/data",
      "description": "Highest occupied molecular orbital. Units: eV"
    },
    "lumo": {
      "$ref": "#/definitions/data",
      "description": "Lowest unoccupied molecular orbital. Units: eV"
    },
    "s0_s1": {
      "$ref": "#/definitions/data",
      "description": "First singlet excitation. Units: eV"
    }

  },
  "additionalProperties": false
}