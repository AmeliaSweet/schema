{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/computation.schema.json",
  "title": "computation",
  "description": "Descriptors derived from computation for a molecule entry in database",
  "definitions": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3
    },
    "scalar": {
      "type": "number"
    }
  },
  "type": "object",
  "dft_parameters": {
    "description": "Parameters used for DFT calculations",
    "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema/dft.schema.json"
  },
  "order": {
    "description": "Additional field for sorting data such as IP order",
    "oneOf": [
      {
        "type": "number"
      },
      {
        "type": "string"
      }
    ]
  },
  "value": {
    "description": "The value of the descriptor",
    "oneOf": [
      {
        "$ref": "#/definitions/scalar"
      },
      {
        "$ref": "#/definitions/vector"
      }
    ]
  },
  "unit": {
    "description": "The units for the value",
    "type": "string"
  },
  "additionalProperties": false
}