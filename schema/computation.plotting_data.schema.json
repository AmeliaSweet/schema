{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.schema.json",
  "title": "computation",
  "description": "Descriptors derived from computation for a molecule entry in database",
  "type": "object",

  "dft_parameters": {
    "description": "Parameters used for DFT calculations",
    "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/dft.schema.json"
  },
  "order": {
    "description": "Electronic charge on the molecule",
    "oneOf": [
      {"type": "number"},
      {"type": "string"}
    ]
  },
  "spin_multiplicity": {
    "description": "spin multiplicity of the molecule",
    "type": "integer"
  },
  "is_groundState": {
    "description": "whether this charge is the ground state charge",
    "type": "boolean"
  },
  "plotting_data": {
    "description": "An array where the first item is an array of x values and the ",
    "type": "array",
    "items": {
      "type": "array",
      "items": "number"
    },
    "minItems": 2,
    "maxItems": 2
  },
  "additionalProperties": false
}