{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.schema.json",
  "title": "sites",
  "description": "Atom information of a molecule based on pymatgen.core.Molecule",
  "type": "object",
  "properties": {
    "dft_parameters": {
      "description": "Parameters used for DFT calculations",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.dft.schema.json"
    },
    "charge": {
      "description": "Electronic charge on the molecule",
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "spin_multiplicity": {
      "description": "Spin multiplicity of the molecule",
      "type": "integer"
    },
    "is_groundState": {
      "description": "Whether this charge is the ground state charge",
      "type": "boolean"
    },
    "sites": {
      "description": "Pymatgen geometry xyz sites",
      "type": "object",
      "items": [
        {
          "type": "object",
          "calculations": {
            "name": {
              "type": "string"
            },
            "species": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "calculations": {
                    "element": {
                      "type": "string"
                    },
                    "occu": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "element",
                    "occu"
                  ]
                }
              ]
            },
            "xyz": {
              "type": "array",
              "items": [
                {
                  "type": "number"
                },
                {
                  "type": "number"
                },
                {
                  "type": "number"
                }
              ]
            },
            "calculations": {
              "type": "object"
            }
          },
          "required": [
            "name",
            "species",
            "xyz",
            "properties"
          ]
        }
      ]
    },
    "additionalProperties": false
  }
}



