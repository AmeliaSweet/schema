{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.schema.json",
  "title": "geometry",
  "description": "Atom information of a molecule based on pymatgen.core.Molecule",
  "type": "object",
  "properties": {
    "conditions": {
      "description": "Parameters used for calculations",
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.calc_info.schema.json"
    },
    "order": {
      "description": "Electronic charge on the molecule",
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "spin_multiplicity": {
      "description": "Spin multiplicity of the molecule",
      "type": "integer"
    },
    "is_groundState": {
      "description": "Whether this charge is the ground state charge",
      "type": "boolean"
    },
    "sites": {
      "$ref": "https://raw.githubusercontent.com/D3TaLES/schema/reb_dev/schema/computation.geometry.sites.schema.json"
    }
  },
  "additionalProperties": false
}



